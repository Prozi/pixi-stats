{
  "name": "pixi-stats",
  "version": "1.3.8",
  "description": "a 2024 version of stats.js + gstats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "postbuild": "find dist -name '*.map' -delete",
    "format": "prettier --write src",
    "precommit": "yarn format && yarn build"
  },
  "resolutions": {
    "semver": ">=5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Prozi/pixi-stats.git"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "keywords": [
    "stats.js",
    "gstats",
    "pixi.js",
    "webgl",
    "stats",
    "fps"
  ],
  "author": "Jacek Pietal <prozi85@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Prozi/pixi-stats/issues"
  },
  "homepage": "https://github.com/Prozi/pixi-stats#readme",
  "dependencies": {
    "@pietal.dev/gstats": "^0.1.5"
  },
  "peerDependencies": {
    "pixi.js": "^8.2.5"
  },
  "devDependencies": {
    "pixi.js": "^8.2.5",
    "prettier": "^3.3.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.5.4"
  }
}
